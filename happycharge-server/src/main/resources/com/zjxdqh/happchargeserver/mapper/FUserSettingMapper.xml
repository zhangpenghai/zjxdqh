<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="com.zjxdqh.happchargeserver.mapper.FUserSettingMapper">
    <sql id="column">
		t.id id, t.uid uid, t.default_pay_method defaultPayMethod,t.autopay autopay,t.default_recharge_value defaultRechargeValue
	</sql>

    <select id="getFuserSettingByUid" parameterType="java.lang.Integer" resultType="com.zjxdqh.face.vo.FUserSetting">
        SELECT <include refid="column"/> FROM f_user_setting t where uid = #{uid}
    </select>

    <insert id="insertFUserSetting" parameterType="com.zjxdqh.face.vo.FUserSetting">
        insert into f_user_setting
        <trim prefix="(" suffix=")" suffixOverrides=",">
            <if test="id != null and id != ''">
                id,
            </if>
            <if test="uid != null and uid != ''">
                uid,
            </if>
            <if test="defaultPayMethod != null and defaultPayMethod != ''">
                default_pay_method,
            </if>
            <if test="autopay != null and autopay != ''">
                autopay
            </if>
        </trim>
        <trim prefix="values (" suffix=")" suffixOverrides=",">
            <if test="id != null and id != ''">
                #{id},
            </if>
            <if test="uid != null and uid != ''">
                #{uid},
            </if>
            <if test="defaultPayMethod != null and defaultPayMethod != ''">
                #{defaultPayMethod},
            </if>
            <if test="autopay != null and autopay != ''">
                #{autopay}
            </if>
        </trim>
    </insert>

    <update id="updateFuserSetting" parameterType="com.zjxdqh.face.vo.FUserSetting">
        update f_user_setting
        set default_pay_method= #{fUserSetting.defaultPayMethod}
            <!--<if test="fUserSetting.defaultPayMethod!=null and fUserSetting.defaultPayMethod!=''">-->
                <!--default_pay_method= #{fUserSetting.defaultPayMethod},-->
            <!--</if>-->
            <!--<if test="fUserSetting.autopay!=null and fUserSetting.autopay!=''">-->
                <!--autopay= #{fUserSetting.autopay},-->
            <!--</if>-->
        where uid= #{fUserSetting.uid}
    </update>



</mapper>